<?xml version="1.0"?>
<ruleset name="ASG Theme Coding Standards">
	<description>PHP_CodeSniffer ruleset for ASG WordPress Theme</description>

	<!-- Scan all files in directory -->
	<file>.</file>

	<!-- Only scan PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Exclude paths -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>

	<!-- Cache for faster repeat runs -->
	<arg name="cache" value=".phpcs-cache"/>

	<!-- Show progress and sniff codes in all reports -->
	<arg value="ps"/>
	<arg name="colors"/>

	<!-- Check up to 8 files simultaneously -->
	<arg name="parallel" value="8"/>

	<!-- Use WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
		<!-- Allow file names that don't match WordPress conventions (like front-page.php) -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
	</rule>

	<!-- WordPress theme text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="asg"/>
			</property>
		</properties>
	</rule>

	<!-- Verify that no WP functions are used which are deprecated or removed -->
	<rule ref="WordPress.WP.DeprecatedFunctions">
		<properties>
			<property name="minimum_wp_version" value="6.0"/>
		</properties>
	</rule>

	<!-- PHP Compatibility -->
	<rule ref="PHPCompatibilityWP"/>
	<config name="testVersion" value="7.4-"/>

	<!-- Minimum WordPress version -->
	<config name="minimum_wp_version" value="6.0"/>

	<!-- Allow theme-specific file naming -->
	<rule ref="WordPress.Files.FileName">
		<properties>
			<property name="is_theme" value="true"/>
		</properties>
	</rule>

	<!-- Prefixes for hooks, functions, classes -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="asg"/>
				<element value="ASG"/>
			</property>
		</properties>
		<!-- Allow short prefix - "asg" is intentional for this theme -->
		<exclude name="WordPress.NamingConventions.PrefixAllGlobals.ShortPrefixPassed"/>
	</rule>

	<!-- Exclude file comment spacing issues from files with PHP/HTML mixing -->
	<rule ref="Squiz.Commenting.FileComment.SpacingAfterComment">
		<exclude-pattern>*.php</exclude-pattern>
	</rule>
</ruleset>
